<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="425dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_height="match_parent"
    android:id="@+id/newsDialog"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/NewsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="newsTitle"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/datetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="March 31, 2022"
                    android:textColor="@color/darkGrey"
                    android:textSize="20sp" />

                <View
                    android:layout_width="375dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/darkGrey" />

                <TextView
                    android:id="@+id/NewsHeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="dfssdsss"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/NewsSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dfssdsss"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                        <ImageButton
                            android:id="@+id/chrome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="40dp"
                            android:background="@color/white"
                            android:src="@drawable/ic_icons8_chrome" />

                        <ImageButton
                            android:id="@+id/twitter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="40dp"
                            android:background="@color/white"
                            android:src="@drawable/ic_icons8_twitter_circled" />

                        <ImageButton
                            android:id="@+id/facebook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="60dp"
                            android:background="@color/white"
                            android:src="@drawable/ic_icons8_facebook" />

                </LinearLayout>

        </LinearLayout>

</RelativeLayout>